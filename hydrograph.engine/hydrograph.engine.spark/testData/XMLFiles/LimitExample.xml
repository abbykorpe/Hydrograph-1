<p:graph name="LimitExample" xmlns:it="hydrograph/engine/jaxb/inputtypes"
	xmlns:ot="hydrograph/engine/jaxb/outputtypes" xmlns:spt="hydrograph/engine/jaxb/straightpulltypes"
	xmlns:op="hydrograph/engine/jaxb/operationstypes" xmlns:ct="hydrograph/engine/jaxb/commandtypes"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="hydrograph/engine/jaxb/main"
	xsi:schemaLocation="hydrograph/engine/jaxb/main ../../src/main/resources/newxmlschema/main/main.xsd  ">

	<inputs id="input1" batch="0" xsi:type="it:textFileDelimited">
		<outSocket id="out0">
			<schema name="outSchema">
				<field name="id" type="java.lang.String" />
				<field name="name" type="java.lang.String" />
				<field name="city" type="java.lang.String" />
			</schema>
		</outSocket>

		<path uri="..\hydrograph.engine.spark\testData\inputFiles\delimitedInputFile.txt" />
		<delimiter value="," />
		<hasHeader value="false" />
		<charset value="ISO-8859-1" />
	</inputs>

	<straightPulls id="limit" batch="0" xsi:type="spt:limit">
		<inSocket fromComponentId="input1" fromSocketId="out0" id="in0" />
		<outSocket id="out0" type="out">
			<copyOfInsocket inSocketId="in0" />
		</outSocket>
		<maxRecords value="2" />
	</straightPulls>

	<outputs id="output1" batch="0" xsi:type="ot:textFileDelimited" >
		<inSocket fromComponentId="limit" fromSocketId="out0" id="in0">
			<schema name="outSchema">
				<field name="id" type="java.lang.String" />
				<field name="name" type="java.lang.String" />
				<field name="city" type="java.lang.String" />
			</schema>
		</inSocket>
		<path uri="..\hydrograph.engine.spark\testData\output\limitOutput" />
		<delimiter value="," />
		<hasHeader value="true" />
		<charset value="ISO-8859-1" />
	</outputs>
</p:graph>