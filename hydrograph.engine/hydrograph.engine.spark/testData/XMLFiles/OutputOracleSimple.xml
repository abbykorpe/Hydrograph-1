<p:graph xmlns:p="hydrograph/engine/jaxb/main" xmlns:it="hydrograph/engine/jaxb/inputtypes"
         xmlns:ot="hydrograph/engine/jaxb/outputtypes" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         name="ORACLE OUTPUT EXAMPLE"
         xsi:schemaLocation="hydrograph/engine/jaxb/main ../../../hydrograph.engine.core/src/main/resources/newxmlschema/main/main.xsd  ">

    <inputs id="input1" batch="0" xsi:type="it:textFileDelimited">
        <outSocket id="out0">
            <schema name="outSchema">
                <field name="NUM" type="java.lang.Integer"/>
                <field name="LWR" type="java.lang.String"/>
                <field name="UPR" type="java.lang.String"/>
                <field name="DECI" type="java.math.BigDecimal" precision="38" scale="20"/>
                <field name="LON" type="java.lang.Long"/>
                <field name="BUL" type="java.lang.Boolean"/>
                <field name="DATEVALUE" type="java.util.Date" format="dd/MM/yyyy"/>
            </schema>
        </outSocket>
        <path uri="hydrograph.engine.spark/testData/inputFiles/inputOracle"/>
        <delimiter value=","/>
        <hasHeader value="false"/>
    </inputs>

    <outputs id="out oracle" batch="0" xsi:type="ot:oracle">
        <inSocket fromComponentId="input1" fromSocketId="out0" id="in0" type="in">
            <schema name="schema1">
                <field name="NUM" type="java.lang.Integer"/>
                <field name="LWR" type="java.lang.String"/>
                <field name="UPR" type="java.lang.String"/>
                <field name="DECI" type="java.math.BigDecimal" precision="38" scale="20"/>
                <field name="LON" type="java.lang.Long"/>
                <field name="BUL" type="java.lang.Boolean"/>
                <field name="DATEVALUE" type="java.util.Date" format="dd/MM/yyyy"/>
            </schema>
        </inSocket>
        <sid value="PRACTICE"/>
        <hostName value="DBDEVSRV"/>
        <port value="1521"/>
        <driverType value="thin"/>
        <tableName value="testingTable424"/>
        <userName value="htcd"/>
        <password value="htcd"/>
        <loadType>
            <newTable>
                <primaryKeys>
                    <field name="NUM"/>
                </primaryKeys>
            </newTable>
            <!--<truncateLoad />-->
            <!--<Insert/>-->
            <!-- <update> <updateByKeys> <field name="num" /> </updateByKeys> </update> -->
        </loadType>
        <!--<schemaName value="htcd"/>-->
        <chunkSize value="2"/>
    </outputs>
</p:graph>