<p:graph name="CumulateExample" xmlns:p="hydrograph/engine/jaxb/main"
	xmlns:it="hydrograph/engine/jaxb/inputtypes" xmlns:ot="hydrograph/engine/jaxb/outputtypes"
	xmlns:spt="hydrograph/engine/jaxb/straightpulltypes"
	xmlns:op="hydrograph/engine/jaxb/operationstypes" xmlns:ct="hydrograph/engine/jaxb/commandtypes"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="hydrograph/engine/jaxb/main ../../../elt-core/src/main/resources/newxmlschema/main/main.xsd  ">

	<inputs id="input1" phase="0" xsi:type="it:textFileDelimited">
		<outSocket id="out0">
			<schema name="outSchema">
				<field name="id" type="java.lang.Integer" />
				<field name="name" type="java.lang.String" />
				<field name="dob" type="java.util.Date" format="yyyy-MM-dd"/>
				<field name="sal" type="java.math.BigDecimal" scale="2"/>
			</schema>
		</outSocket>
		<path uri="testData/Input/Source1-delimited.txt" />
		<delimiter value="," />
		<hasHeader value="false" />
	</inputs>

	<operations id="scan" xsi:type="op:cumulate">
		<inSocket fromComponentId="input1" fromSocketId="out0" id="in0" />
		<operation id="opt1"
			class="hydrograph.engine.transformation.userfunctions.cumulate.Count">
			<inputFields>
				<field name="id" inSocketId="in0" />
			</inputFields>
			<outputFields>
				<field name="count1" type="java.lang.Long" />
			</outputFields>
		</operation>
		<operation id="opt2"
			class="hydrograph.engine.transformation.userfunctions.cumulate.Sum">
			<inputFields>
				<field name="id" inSocketId="in0" />
			</inputFields>
			<outputFields>
				<field name="sum1" type="java.lang.Long" />
			</outputFields>
		</operation>
		<operation id="opt3"
			class="hydrograph.engine.transformation.userfunctions.cumulate.Count">
			<inputFields>
				<field name="sal" inSocketId="in0" />
			</inputFields>
			<outputFields>
				<field name="count2" type="java.lang.Long" />
			</outputFields>
		</operation>
		<operation id="opt4"
			class="hydrograph.engine.transformation.userfunctions.cumulate.Sum">
			<inputFields>
				<field name="sal" inSocketId="in0" />
			</inputFields>
			<outputFields>
				<field name="sum2" type="java.lang.Long" />
			</outputFields>
		</operation>
		<outSocket id="out0">
			<passThroughField name="id" inSocketId="in0" />
			<passThroughField name="name" inSocketId="in0" />
			<passThroughField name="dob" inSocketId="in0" />
			<!-- <mapField sourceName="dob" name="date" inSocketId="in0" /> -->
			<operationField name="count1" operationId="opt1" />
			<operationField name="count2" operationId="opt3" />
			<operationField name="sum1" operationId="opt2" />
			<operationField name="sum2" operationId="opt4" />
		</outSocket>
		<primaryKeys>
			<field name="name" />
			<field name="dob" />
		</primaryKeys>
	</operations>


	<outputs id="output1" xsi:type="ot:textFileDelimited">
		<inSocket fromComponentId="scan" fromSocketId="out0" id="in0">
			<schema name="outSchema">
				<field name="id" type="java.lang.String" />
				<field name="name" type="java.lang.String" />
				<field name="dob" type="java.util.Date" format="yyyy-MM-dd"/>
				<field name="count1" type="java.lang.Long" />
				<field name="count2" type="java.math.BigDecimal" scale="2"/>
				<field name="sum1" type="java.lang.Long" />
				<field name="sum2" type="java.math.BigDecimal" scale="2"/>
			</schema>
		</inSocket>
		<path uri="testData/output/CumulateOutput1" />
		<delimiter value="," />
		<hasHeader value="true" />
	</outputs>
</p:graph>