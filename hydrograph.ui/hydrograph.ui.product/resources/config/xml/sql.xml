<tns:Config xmlns:tns="hydrograph/ui/ComponentConfig" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="hydrograph/ui/ComponentConfig xsds/ComponentConfig.xsd ">
	<tns:component paletteIconPath="/icons/sql_palette.png" canvasIconPath="/icons/sql_canvas.png"
		name="SQLComponent" nameInPalette="SQL" defaultNamePrefix="SQL" 
		description="This is SQL component."
		helpFilePath="/hydrograph.ui.help/html/Components/Clone.html"
		acronym="Sql">
		<tns:category>COMMAND</tns:category>
			<tns:port>
			<tns:portSpecification numberOfPorts="0" portAlignment="left" changePortCountDynamically="true" allowMultipleLinks="false" linkMandatory="true">
			</tns:portSpecification>
			<tns:portSpecification  numberOfPorts="0" portAlignment="right" changePortCountDynamically="true" allowMultipleLinks="false" linkMandatory="true">
			</tns:portSpecification>
			<tns:portSpecification numberOfPorts="0" portAlignment="bottom" changePortCountDynamically="false" allowMultipleLinks="false" linkMandatory="true">
			</tns:portSpecification>
		</tns:port>
		
		<tns:property dataType="string" name="name" renderer="COMPONENT_NAME_WIDGET" type="USER"
			group="GENERAL" subGroup="DISPLAY" showAsTooltip="TRUE" tooltipDataType="TEXT"
			usage="REQUIRED" propertyHelpText="Displays Name provided by the user"/>
		
		<tns:property dataType="string" name="file" renderer="FILE_PATH_WIDGET" type="USER"
			group="GENERAL" subGroup="CONFIGURATION" showAsTooltip="TRUE" tooltipDataType="LINK"
			usage="REQUIRED" propertyHelpText="Displays the location of the file either Remote/Local. \nAllows only underscore ‘_’ and alphanumeric characters.">
			<tns:validator>NON_EMPTY_STRING_VALIDATOR</tns:validator>
		</tns:property>
			
		<tns:property dataType="string" name="phase" value="0" renderer="BATCH_WIDGET" type="USER"
			group="GENERAL" subGroup="CONFIGURATION" showAsTooltip="TRUE" tooltipDataType="TEXT"
			usage="REQUIRED" propertyHelpText="Specifies the execution sequence \nof this component in the job flow.">
			<tns:validator>INTEGER_VALIDATOR</tns:validator>
		</tns:property>
	</tns:component>
</tns:Config>
