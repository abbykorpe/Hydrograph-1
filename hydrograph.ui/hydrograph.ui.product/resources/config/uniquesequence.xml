<tns:Config xmlns:tns="hydrograph/ui/ComponentConfig"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="hydrograph/ui/ComponentConfig xsds/ComponentConfig.xsd ">
	<tns:component paletteIconPath="/icons/unique_sequence_palette.png"
		canvasIconPath="/icons/unique_sequence_canvas.png" name="UniqueSequence"
		nameInPalette="Unique Sequence" defaultNamePrefix="UniqueSeq" 
		description="Generates unique sequence of integer values."
		helpFilePath="/hydrograph.ui.help/html/Components/Unique_Sequence.html"
		acronym="UnqSeq">
		<tns:category>TRANSFORM</tns:category>
		<tns:port>
			<tns:portSpecification typeOfPort="in" numberOfPorts="1" portAlignment="left" changePortCountDynamically="false" allowMultipleLinks="false" linkMandatory="true">
				<tns:port sequenceOfPort="0" labelOfPort="in0" nameOfPort="in0" />
			</tns:portSpecification>
			<tns:portSpecification typeOfPort="out" numberOfPorts="1" portAlignment="right" changePortCountDynamically="false" allowMultipleLinks="false" linkMandatory="true">
				<tns:port sequenceOfPort="0" labelOfPort="out0" nameOfPort="out0"/>
			</tns:portSpecification>
		</tns:port>
		
		<tns:property dataType="string" name="name"
			renderer="COMPONENT_NAME_WIDGET" type="USER" group="GENERAL"
			subGroup="DISPLAY" showAsTooltip="TRUE" tooltipDataType="TEXT" usage="REQUIRED" propertyHelpText="Displays Name provided by the user"/>


		<tns:property dataType="string" name="sequence_field" value=""
			renderer="TEXTBOX_WITH_IS_PARAMETER_CHECKBOX_WIDGET" type="USER" group="GENERAL" subGroup="CONFIGURATION"
			showAsTooltip="TRUE" tooltipDataType="TEXT" usage="REQUIRED" propertyHelpText="Field name for the generated Sequence. \nCan be parameterized.">
			<tns:validator>NON_EMPTY_STRING_VALIDATOR</tns:validator>
		</tns:property>
		
		<tns:property dataType="string" name="runtime_properties"
			renderer="RUNTIME_PROPERTIES_WIDGET" type="USER" group="GENERAL"
			subGroup="CONFIGURATION" showAsTooltip="FALSE" tooltipDataType="NONE"
			usage="OPTIONAL" propertyHelpText="Used to override runtime Hadoop configurations \nspecific to this component at run time."/>

		<tns:property dataType="string" name="phase" value="0"
			renderer="PHASE_WIDGET" type="USER" group="GENERAL" subGroup="CONFIGURATION"
			showAsTooltip="TRUE" tooltipDataType="TEXT" usage="REQUIRED" propertyHelpText="Specifies the execution sequence \nof this component in the job flow.">
			<tns:validator>INTEGER_VALIDATOR</tns:validator>
		</tns:property>

	</tns:component>
</tns:Config>
