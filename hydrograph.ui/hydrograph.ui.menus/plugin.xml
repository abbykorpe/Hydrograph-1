<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         point="org.eclipse.ui.commands">
     
      <command
            id="com.bitwise.window.console"
            name="console">
      </command>
      <command
            id="com.bitwise.window.ETLNavigator"
            name="ETLNavigator">
      </command>
      <command
            id="com.bitwise.window.palette"
            name="Palette">
      </command>
      <command
            id="com.bitwise.window.portLabels.showHide"
            name="ShowHidePortLabels">
      </command>
     <command
	         id="com.bitwise.help.aboutaccelero"
            name="About Accelero">
     </command>
   </extension>
	  <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="hydrograph.ui.menus.handlers.ConsoleHandler"
            commandId="com.bitwise.window.console">
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.ProjectExplorerHandler"
            commandId="com.bitwise.window.ETLNavigator">
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.PaletteHandler"
            commandId="com.bitwise.window.palette">
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.DeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="hydrograph.ui.graph.etlgraphicaleditor">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="+">
               </count>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.CutHandler"
            commandId="org.eclipse.ui.edit.cut">
         <activeWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="hydrograph.ui.graph.etlgraphicaleditor">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="+">
               </count>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.CopyHandler"
            commandId="org.eclipse.ui.edit.copy">
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="+">
               </count>
            </with>
         </enabledWhen>
         <activeWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="hydrograph.ui.graph.etlgraphicaleditor">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.PasteHandler"
            commandId="org.eclipse.ui.edit.paste">
         <activeWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="hydrograph.ui.graph.etlgraphicaleditor">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="+">
               </count>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.UndoHandler"
            commandId="org.eclipse.ui.edit.undo">
         <activeWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="hydrograph.ui.graph.etlgraphicaleditor">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="+">
               </count>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.RedoHandler"
            commandId="org.eclipse.ui.edit.redo">
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="+">
               </count>
            </with>
         </enabledWhen>
         <activeWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="hydrograph.ui.graph.etlgraphicaleditor">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.SelectAllHandler"
            commandId="org.eclipse.ui.edit.selectAll">
         <activeWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="hydrograph.ui.graph.etlgraphicaleditor">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="+">
               </count>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="hydrograph.ui.menus.handlers.ShowHidePortLabelsHandler"
            commandId="com.bitwise.window.portLabels.showHide">
      </handler>
       <handler
            class="hydrograph.ui.menus.handlers.AboutDialogHandler"
            commandId="com.bitwise.help.aboutaccelero">
       </handler>
   </extension>
   		
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution  
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               commandId="com.bitwise.menuBar.open"
               id="hydrograph.ui.menus.FileMenu"
               label="File"
                mnemonic ="F">
            <menu
                  id="hydrograph.ui.menus.NewMenu"
                  label="New"
                   mnemonic ="N">
                <command
                     commandId="org.eclipse.ui.newWizard"
                     id="hydrograph.ui.menus.NewMenu.Class"
                     label="Class"
                     style="push"
                     mnemonic ="C">
                  <parameter
                        name="newWizardId"
                        value="org.eclipse.jdt.ui.wizards.NewClassCreationWizard">
                  </parameter>
               </command>
               <command
                     commandId="org.eclipse.ui.newWizard"
                     id="hydrograph.ui.menus.NewMenu.XmlFile"
                     label="Xml File..."
                     style="push"
                      mnemonic ="M">
                  <parameter
                        name="newWizardId"
                        value="org.eclipse.wst.xml.ui.internal.wizards.NewXMLWizard">
                  </parameter>
               </command>
               <command
                     commandId="org.eclipse.ui.newWizard"
                     label="File"
                     style="push"
                      mnemonic ="F">
                  <parameter
                        name="newWizardId"
                        value="org.eclipse.ui.wizards.new.file">
                  </parameter>
               </command>
               <command
                     commandId="org.eclipse.ui.newWizard"
                     label="ELT Project"
                    mnemonic="P"
                     style="push">
                  <parameter
                        name="newWizardId"
                        value="hydrograph.ui.project.structure.wizard">
                  </parameter>
               </command>
               <separator
                     name="hydrograph.ui.menus.separator1"
                     visible="true">
               </separator>
               <command
                     commandId="org.eclipse.ui.newWizard"
                     label="&amp;Other..."
                      mnemonic ="R">
               </command>
            </menu>
            <command
                  commandId="org.eclipse.ui.edit.text.openLocalFile"
                  id="hydrograph.ui.menus.FileMenu.OpenFile"
                  label="Open File..."
                  mnemonic="e">
            </command>
            <separator
                  name="hydrograph.ui.graph.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.closeAll"
                  label="Close All"
                  mnemonic="l"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.close"
                  id="bitwise.close.id"
                  label="Close"
                  mnemonic="C"
                  style="push">
            </command>
            <separator
                  name="hydrograph.ui.graph.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.save"
                  id="hydrograph.ui.menus.FileMenu.SaveFile"
                  label="Save"
                  style="push"
                     mnemonic ="S">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAs"
                  id="hydrograph.ui.menus.FileMenu.SaveAs"
                  label="Save As..."
                  style="push"
                  mnemonic ="A">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  label="Save All"
                  style="push">
            </command>
            <separator
                  name="hydrograph.ui.graph.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.import"
                  label="Import"
                  style="push"
                  mnemonic ="I">
            </command>
            <command
                  commandId="org.eclipse.ui.file.export"
                  label="Export"
                  style="push"
                  mnemonic ="o">
            </command>
            <separator
                  name="hydrograph.ui.graph.separator4"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit"
                  style="push"
                  mnemonic ="x">
            </command>
         </menu>
         <menu
               id="com.bitwsie.edit.menu"
               label="Edit"
               mnemonic ="E">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  label="Undo"
                  style="push"
                  mnemonic ="U">
               <visibleWhen>
                  <with
                        variable="selection">
                     <count
                           value="+">
                     </count>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  label="Redo"
                  style="push"
                  mnemonic ="R">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  label="Cut"
                  style="push"
                  mnemonic ="t">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  label="Copy"
                  style="push"
                  mnemonic ="C">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="Paste"
                  style="push"
                  mnemonic ="P">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  label="Delete"
                  style="push"
                  mnemonic ="D">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.selectAll"
                  label="Select All"
                  style="push"
                   mnemonic ="A">
            </command>
         </menu>
         <menu
               id="hydrograph.ui.menus.WindowMenu"
               label="Window"
               mnemonic ="W" >
            <command
                  commandId="com.bitwise.window.console"
                  label="Console"
                  style="push"
                  mnemonic ="C">
            </command>
            <command
                  commandId="com.bitwise.window.ETLNavigator"
                  label="Project Explorer"
                  style="push"
                  mnemonic ="E">
            </command>
            <command
                  commandId="com.bitwise.window.palette"
                  label="Palette"
                  mnemonic ="t">
            </command>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push"
                  mnemonic ="f">
            </command>
            <command
                  commandId="com.bitwise.window.portLabels.showHide"
                  label="Show/Hide Port Labels"
                  style="toggle"
                  mnemonic ="S">
              
            </command>
            <menu
                  label="Show View"
                  mnemonic ="V">
               <command
                     commandId="org.eclipse.ui.views.showView"
                     label="Others..."
                     style="push"
                     mnemonic ="O">
               </command>
            </menu>
         </menu>
         <menu
               id="hydrograph.ui.menus.HelpMenu"
               label="Help"
               mnemonic ="H">
            <command
                  commandId="org.eclipse.ui.help.displayHelp"
                 label="Help Content"
                  style="push"
                   mnemonic ="H">
           </command>
          <command
                  commandId="com.bitwise.help.aboutaccelero"
                 label="About Accelero"
                  style="push"
                  mnemonic ="A">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <hiddenMenuItem
               id="org.eclipse.ui.run">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="org.eclipse.search.menu">
         </hiddenMenuItem>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.bitwise.window.palette"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+P">
      </key>
      <key
            commandId="com.bitwise.window.ETLNavigator"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+E">
      </key>
      <key
            commandId="com.bitwise.window.portLabels.showHide"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+S">
      </key>
       <key
             commandId="org.eclipse.ui.help.displayHelp"
             contextId="org.eclipse.ui.contexts.window"
             schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
             sequence="f1">
       </key>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="hydrograph.ui.menus.importEngineXmlCategory"
            name="ELT Project">
      </category>
      <wizard
            category="hydrograph.ui.menus.importEngineXmlCategory"
            class="hydrograph.ui.menus.importWizards.ImportEngineXmlWizard"
            icon="icons/import_xml_option.png"
            id="hydrograph.ui.menus.importWizards.ImportEngineXmlWizard"
            name="Import Engine Xml">
         <description>
            Import Engine XML file from the local file system into the workspace.
         </description>
      </wizard>
   </extension>

</plugin>
