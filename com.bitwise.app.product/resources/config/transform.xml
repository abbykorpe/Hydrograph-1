<?xml version="1.0" encoding="UTF-8"?>
<tns:Config xmlns:tns="http://www.bitwise.com/ComponentConfig"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.bitwise.com/ComponentConfig xsds/ComponentConfig.xsd ">
	<tns:component paletteIconPath="/icons/transform_palette.png"
		canvasIconPath="/icons/transform_canvas.png" name="Transform"
		nameInPalette="Transform" defaultNamePrefix="Transform" 
		description="This is Transform component."
		helpFilePath="/com.bitwise.app.help/html/Components/Transform.html">
		<tns:category>TRANSFORM</tns:category>
		<tns:port>
			<tns:portSpecification typeOfPort="in" numberOfPorts="1" changePortCountDynamically="false">
				<tns:port sequenceOfPort="0" linkMandatory="true" labelOfPort="in0" nameOfPort="in0" allowMultipleLinks="false"/>
			</tns:portSpecification>
			<tns:portSpecification typeOfPort="out" numberOfPorts="1" changePortCountDynamically="false">
				<tns:port sequenceOfPort="0" linkMandatory="true" labelOfPort="out0" nameOfPort="out0" allowMultipleLinks="false"/>
			</tns:portSpecification>
		</tns:port>
		
		<tns:property dataType="string" name="name"
			renderer="COMPONENT_NAME_WIDGET" type="USER" group="GENERAL"
			subGroup="DISPLAY" showAsTooltip="TRUE" tooltipDataType="TEXT" usage="REQUIRED" />

		<tns:property dataType="string" name="schema" renderer="JOIN_FIXED_WIDTH_SCHEMA_WIDGET" type="USER"
			group="SCHEMA" subGroup="RECORD_STRUCTURE_DETAILS" showAsTooltip="FALSE" tooltipDataType="NONE"
			usage="REQUIRED">
			<tns:validator>SCHEMA_GRID_VALIDATOR</tns:validator>
		</tns:property>

		<tns:property dataType="string" name="runtime_properties"
			renderer="RUNTIME_PROPERTIES_WIDGET" type="USER" group="GENERAL"
			subGroup="CONFIGURATION" showAsTooltip="FALSE" tooltipDataType="NONE"
			usage="OPTIONAL" />

		<tns:property dataType="string" name="operation"
			renderer="TRANSFORM_WIDGET" type="USER" group="GENERAL" subGroup="CONFIGURATION"
			showAsTooltip="TRUE" tooltipDataType="LIST" usage="OPTIONAL" />
			
		<tns:property dataType="string" name="phase" value="0"
			renderer="PHASE_WIDGET" type="USER" group="GENERAL" subGroup="CONFIGURATION"
			showAsTooltip="TRUE" tooltipDataType="TEXT" usage="REQUIRED">
			<tns:validator>INTEGER_VALIDATOR</tns:validator>
		</tns:property>


		<tns:property dataType="string" name="operation"
			renderer="TRANSFORM_WIDGET" type="USER" group="GENERAL" subGroup="CONFIGURATION"
			showAsTooltip="TRUE" tooltipDataType="LIST" usage="OPTIONAL" />
	  <tns:Operations>
      <tns:interface class="com.bitwiseglobal.bhse.userfunctions.base.TransformBase" name="TRANSFORM"/>
      <tns:stdOperation class="com.bitwiseglobal.bhse.userfunctions.transform.CopyFields" name="CopyFields"/>
      <tns:stdOperation class="com.bitwiseglobal.bhse.userfunctions.transform.RegexSplitTransform" name="RegexSplitTransform"/>
      </tns:Operations>


	</tns:component>
</tns:Config>
