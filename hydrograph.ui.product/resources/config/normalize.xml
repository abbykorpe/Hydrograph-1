<tns:Config xmlns:tns="http://www.bitwise.com/ComponentConfig" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.bitwise.com/ComponentConfig ComponentConfig.xsd ">
	<tns:component paletteIconPath="/icons/normalize_palette.png" 
		canvasIconPath="/icons/normalize_canvas.png" name="Normalize" 
		nameInPalette="Normalize" defaultNamePrefix="Normalize" 
		description="Normalize merges many into one."
		helpFilePath="/hydrograph.ui.help/html/Components/Normalize.html">
		<tns:category>TRANSFORM</tns:category>
		<tns:port>
			<tns:portSpecification typeOfPort="in" numberOfPorts="1" changePortCountDynamically="false">
				<tns:port sequenceOfPort="0" allowMultipleLinks="false" linkMandatory="true" nameOfPort="in0" labelOfPort="in0"/>
			</tns:portSpecification>
			<tns:portSpecification typeOfPort="out" numberOfPorts="1" changePortCountDynamically="false">
				<tns:port sequenceOfPort="0" allowMultipleLinks="false" linkMandatory="true" nameOfPort="out0" labelOfPort="out0"/>
			</tns:portSpecification>
		</tns:port>
		
		<tns:property dataType="string" name="name" 
			renderer="COMPONENT_NAME_WIDGET" type="USER" group="GENERAL" 
			subGroup="DISPLAY" showAsTooltip="TRUE" tooltipDataType="TEXT" usage="REQUIRED"/>
		
		<tns:property dataType="string" name="schema" renderer="TRANSFORM_SCHEMA_WIDGET" type="USER"
			group="SCHEMA" subGroup="RECORD_STRUCTURE_DETAILS" showAsTooltip="TRUE" tooltipDataType="LIST"
         usage="REQUIRED">
			<tns:validator>TRANSFORM_SCHEMA_GRID_VALIDATOR</tns:validator>
		</tns:property>
		
		<tns:property dataType="string" name="runtime_properties" renderer="RUNTIME_PROPERTIES_WIDGET"
			type="USER" group="GENERAL" subGroup="CONFIGURATION" showAsTooltip="FALSE" tooltipDataType="NONE"
			usage="OPTIONAL"/>
			
		<tns:property dataType="string" name="phase" value="0" renderer="PHASE_WIDGET" type="USER"
			group="GENERAL" subGroup="CONFIGURATION" showAsTooltip="TRUE" tooltipDataType="TEXT"
			usage="REQUIRED">
			<tns:validator>INTEGER_VALIDATOR</tns:validator>
		</tns:property>	
		
		<tns:property dataType="string" name="operation" renderer="NORMALIZE_WIDGET" type="USER" group="GENERAL" subGroup="CONFIGURATION"
			showAsTooltip="TRUE" tooltipDataType="LIST" usage="OPTIONAL" />
			
			
		<tns:operations>
			<tns:interface
				class="com.bitwiseglobal.bhse.userfunctions.base.NormalizeTransformBase" name="NORMALIZE" />
			<tns:stdOperation
				class="com.bitwiseglobal.bhse.userfunctions.normalize.MetaPivot" name="MetaPivot" />
			<tns:stdOperation
				class="com.bitwiseglobal.bhse.userfunctions.normalize.RegexSplitNormalize" name="RegexSplitNormalize" />
		</tns:operations>		
			
	</tns:component>
</tns:Config>