<tns:Config xmlns:tns="http://www.bitwise.com/ComponentConfig" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.bitwise.com/ComponentConfig xsds/ComponentConfig.xsd ">
	<tns:component paletteIconPath="/icons/filter_palette.png" canvasIconPath="/icons/filter_canvas.png"
		name="Filter" nameInPalette="Filter" defaultNamePrefix="Filter" 
		description="Select specific records from input based on filter condition in the operation class."
		helpFilePath="/hydrograph.ui.help/html/Components/Filter.html">
		<tns:category>TRANSFORM</tns:category>
		<tns:port>
			<tns:portSpecification typeOfPort="in" numberOfPorts="1" changePortCountDynamically="false">
				<tns:port sequenceOfPort="0" linkMandatory="true" labelOfPort="in0" nameOfPort="in0" allowMultipleLinks="false"/>
			</tns:portSpecification>
			<tns:portSpecification typeOfPort="out" numberOfPorts="1" changePortCountDynamically="false">
				<tns:port sequenceOfPort="0" linkMandatory="true" labelOfPort="out0" nameOfPort="out0" allowMultipleLinks="false"/>
			</tns:portSpecification>
			<tns:portSpecification typeOfPort="unused" numberOfPorts="1" changePortCountDynamically="false">
				<tns:port sequenceOfPort="0" linkMandatory="true" labelOfPort="un0" nameOfPort="un0" allowMultipleLinks="false"/>
			</tns:portSpecification>
		</tns:port>
		
		<tns:property dataType="string" name="name" renderer="COMPONENT_NAME_WIDGET" type="USER"
			group="GENERAL" subGroup="DISPLAY" showAsTooltip="TRUE" tooltipDataType="TEXT"
			usage="REQUIRED" propertyHelpText="Displays Name provided by the user">
			<tns:validator>NON_EMPTY_STRING_VALIDATOR</tns:validator>
		</tns:property>
		
		<tns:property dataType="string" name="OPERATION_CLASS" renderer="OPERATIONAL_CLASS_WIDGET"
			type="USER" group="GENERAL" subGroup="CONFIGURATION" showAsTooltip="TRUE" tooltipDataType="LINK"
			usage="REQUIRED" propertyHelpText="Specify java class for performing the Filter operation">
			<tns:validator>CLASS_NAME_VALIDATOR</tns:validator>
		</tns:property>
		
		<tns:property dataType="string" name="operation_fields" renderer="FILTER_PROPERTY_WIDGET" type="USER"
			group="GENERAL" subGroup="CONFIGURATION" showAsTooltip="TRUE" tooltipDataType="LIST"
			usage="OPTIONAL" propertyHelpText="Fields used within the java \nclass for the Filter operation.">
			<tns:validator>KEY_FIELDS_VALIDATOR</tns:validator>
			</tns:property>

			
		<tns:property dataType="string" name="runtime_properties" renderer="RUNTIME_PROPERTIES_WIDGET"
			type="USER" group="GENERAL" subGroup="CONFIGURATION" showAsTooltip="FALSE" tooltipDataType="NONE"
			usage="OPTIONAL" propertyHelpText="Used to override runtime Hadoop configurations \nspecific to this component at run time."/>

		<tns:property dataType="string" name="phase" value="0" renderer="PHASE_WIDGET" type="USER"
			group="GENERAL" subGroup="CONFIGURATION" showAsTooltip="TRUE" tooltipDataType="TEXT"
			usage="REQUIRED" propertyHelpText="Specifies the execution sequence \nof this component in the job flow.">
			<tns:validator>INTEGER_VALIDATOR</tns:validator>
		</tns:property>

	<tns:operations>
		<tns:interface class="hydrograph.engine.bhse.userfunctions.base.FilterBase"
			name="FILTER" />
	</tns:operations>
	</tns:component>
</tns:Config>
